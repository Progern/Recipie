<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/activity_splash_screen"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="com.olegmisko.recipie.SplashScreenActivity">


  <ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:srcCompat="@drawable/splash_screen_background"
    android:id="@+id/background_image" />

  <ImageView
    android:layout_width="256dp"
    android:layout_height="256dp"
    app:srcCompat="@drawable/splash_screen_app_logo"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    android:id="@+id/app_logo" />

  <TextView
    android:text="@string/splash_screen_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_below="@id/app_logo"
    android:layout_marginTop="60dp"
    android:id="@+id/welcome_text"
    android:textColor="@color/colorPrimaryText"
    android:textSize="20sp"
    android:fontFamily="sans-serif-medium" />

  <Button
    android:text="@string/splash_get_started"
    android:fontFamily="sans-serif-medium"
    android:textSize="14sp"
    android:layout_width="130dp"
    android:layout_height="wrap_content"
    android:layout_below="@id/welcome_text"
    android:layout_alignParentStart="true"
    android:layout_marginTop="15dp"
    android:layout_marginStart="30dp"
    android:id="@+id/get_started_button"
    android:background="@drawable/filled_button"
    android:textColor="#FFFFFF"/>

  <Button
    android:text="@string/splash_sign_in"
    android:fontFamily="sans-serif-medium"
    android:textSize="14sp"
    android:layout_width="130dp"
    android:layout_height="wrap_content"
    android:layout_below="@id/welcome_text"
    android:layout_alignParentEnd="true"
    android:layout_marginTop="15dp"
    android:layout_marginEnd="30dp"
    android:id="@+id/sign_in_button"
    android:background="@drawable/transparent_button"
    android:textColor="@color/colorPrimary"/>
</RelativeLayout>
